@using Microsoft.AspNetCore.Identity
@using DataAccessLayer.Models

@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - InvoiceApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">

            <div class="container">
                @if (!SignInManager.IsSignedIn(User))
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <h2>Enterwell Invoice Application</h2>
                    </div>
                }
                else if (SignInManager.IsSignedIn(User))
                {
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item" style="padding: 0 5px;">
                                <input type="button" class="btn btn-outline-success" value="Home" onclick="location.href='@Url.Action("Index", "Home")'" />
                            </li>
                            <li class="nav-item" style="padding: 0 5px;">
                                <input type="button" class="btn btn-outline-dark" value="Invoices" onclick="location.href='@Url.Action("Index", "Invoice")'" />
                            </li>
                            <li class="nav-item" style="padding: 0 5px;">
                                <input type="button" class="btn btn-outline-dark" value="Items" onclick="location.href='@Url.Action("Index", "Item")'" />
                            </li>
                        </ul>
                    </div>
                }
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <partial name="_LoginPartial.cshtml" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted text-center">
        <div class="container">
            &copy; 2020 - InvoiceApp - Filip Mucnjak
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>

@using Microsoft.AspNetCore.Identity
@using DataAccessLayer.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <button id="manage" class="btn btn-outline-primary" style="margin: 0px 5px;" title="Manage" onclick="relocate()">Hello, @UserManager.GetUserName(User)!</button>
    </li>
    <li class="nav-item">
        <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button id="logout" type="submit" class="btn btn-outline-danger">Logout</button>
        </form>
    </li>
}
</ul>

<script>
    function relocate() {
        location.href = "/Identity/Account/Manage/Index";
    }
</script>